[Unit]
Description=Service for using pirate audio display in volumio
After=syslog.target

[Service]
Type=simple
ExecStart=/data/plugins/system_hardware/pirateaudio/.venv/bin/python /data/plugins/system_hardware/pirateaudio/source/main.py
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=volumio
User=volumio
Group=volumio

[Install]
WantedBy=multi-user.target
